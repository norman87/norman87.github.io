<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partials/head.ejs%>
  </head>
  <body>
    <h1>Admin Dashboard</h1>
    <a href="/admin/new">Add new Employee</a>
    <h2>List of Employees</h2>
    <table class="table">
        <thead class="thead-dark">
            <tr>
              <th scope="col">No.</th>
              <th scope="col">First Name</th>
              <th scope="col">Last Name</th>
              <th scope="col">Leave Balance</th>
            </tr>
        </thead>
        <tbody>
            <%for (let i=0; i<employees.length; i++) {%>
                <tr>
                    <td><%=i+1%></td>
                    <td><a href="/admin/<%=employees[i]._id%>"><%=employees[i].firstName%></a></td>
                    <td><a href="/admin/<%=employees[i]._id%>"><%=employees[i].lastName%></a></td>
                    <td><a href="/admin/<%=employees[i]._id%>"><%=employees[i].leaveBalance%></a></td>
                </tr>        
            <%}%>
        </tbody>
    </table>
        
    
    <ol>

        </ol>
  </body>
</html>
